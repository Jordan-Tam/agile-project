{{> header}}
<div class="container-fluid">
    <div class="mb-3">
        <a href="/logs" class="btn btn-secondary mb-3">‚Üê Back to Logs</a>
        {{#ifEquals groupStatus "deleted"}}
            <span class="badge bg-danger ms-2">This group has been deleted</span>
        {{/ifEquals}}
    </div>

    <h1 class="mb-3">Group Change Logs - {{group.groupName}}</h1>

    <!-- Change Logs List -->
    <div class="mt-4">
        {{#if hasLogs}}
            <h2 class="mb-3">Change Logs ({{logs.length}})</h2>
            <div class="change-logs-list">
                {{#each logs}}
                    <div class="change-log-item mb-3 p-3 border rounded">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="mb-0">{{this.action}}</h5>
                            <span class="text-muted small">{{formatDate this.timestamp}}</span>
                        </div>
                        <p class="mb-1"><strong>Performed by:</strong> {{this.performedBy.userName}}</p>
                        
                        {{#if this.details}}
                            {{#if this.details.changes}}
                                <div class="mt-2">
                                    <strong>Changes:</strong>
                                    <ul class="mb-0">
                                        {{#each this.details.changes}}
                                            <li>
                                                <strong>{{@key}}:</strong> 
                                                {{#if this.old}}Changed from "{{this.old}}" to "{{this.new}}"{{else}}{{this}}{{/if}}
                                            </li>
                                        {{/each}}
                                    </ul>
                                </div>
                            {{else}}
                                {{#if this.details.groupName}}
                                    <p class="mb-1"><strong>Group Name:</strong> {{this.details.groupName}}</p>
                                {{/if}}
                                {{#if this.details.memberName}}
                                    <p class="mb-1"><strong>Member:</strong> {{this.details.memberName}}</p>
                                {{/if}}
                                {{#if this.details.oldCurrency}}
                                    <p class="mb-1"><strong>Currency:</strong> Changed from {{this.details.oldCurrency}} to {{this.details.newCurrency}}</p>
                                {{/if}}
                            {{/if}}
                        {{/if}}
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="alert alert-info">
                <h4>No change logs found</h4>
                <p>There are no group-level change logs for this group yet.</p>
            </div>
        {{/if}}
    </div>
</div>

<script>
    // Helper function to format date (in case it's not available in handlebars)
    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleString();
    }
</script>

