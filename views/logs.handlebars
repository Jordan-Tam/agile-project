{{> header}}
<div class="container-fluid">
    <h1 class="mb-4">Change Logs</h1>
    <p class="mb-4">View change logs for all your groups</p>

    <!-- Search and Filter Form -->
    <form method="POST" action="/logs" class="mb-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label">Search by Group Name:</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="searchTerm" 
                    name="searchTerm" 
                    placeholder="Enter group name..."
                    value="{{searchTerm}}"
                />
            </div>
            <div class="col-md-3">
                <label for="groupStatus" class="form-label">Filter by Status:</label>
                <select class="form-select" id="groupStatus" name="groupStatus">
                    <option value="all" {{#ifEquals groupStatus "all"}}selected{{/ifEquals}}>All Groups</option>
                    <option value="active" {{#ifEquals groupStatus "active"}}selected{{/ifEquals}}>Active Groups</option>
                    <option value="deleted" {{#ifEquals groupStatus "deleted"}}selected{{/ifEquals}}>Deleted Groups</option>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">Search</button>
                <a href="/logs" class="btn btn-secondary">Clear</a>
            </div>
        </div>
    </form>

    <!-- Groups List -->
    <div class="mt-4">
        {{#if hasGroups}}
            <h2 class="mb-3">Your Groups ({{groups.length}})</h2>
            <div class="row">
                {{#each groups}}
                    <div class="col-md-6 col-lg-4 mb-3">
                        <div class="card {{#ifEquals this.groupStatus "deleted"}}border-danger{{else}}border-success{{/ifEquals}}">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">{{this.groupName}}</h5>
                                    <span class="badge {{#ifEquals this.groupStatus "active"}}bg-success{{else}}bg-danger{{/ifEquals}}">
                                        {{#ifEquals this.groupStatus "active"}}Active{{else}}Deleted{{/ifEquals}}
                                    </span>
                                </div>
                                <div class="mt-3">
                                    <a href="/logs/{{this._id}}" class="btn btn-info btn-sm me-2">View Expenses</a>
                                    <a href="/logs/{{this._id}}/change-logs" class="btn btn-secondary btn-sm">Show Group Change Logs</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="alert alert-info">
                <h4>No groups found</h4>
                <p>{{#if searchTerm}}No groups match your search criteria.{{else}}You don't have any groups with change logs yet.{{/if}}</p>
            </div>
        {{/if}}
    </div>
</div>

<script>
    // Auto-submit form when dropdown changes
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form[action="/logs"]');
        const statusFilter = document.getElementById('groupStatus');

        if (statusFilter) {
            statusFilter.addEventListener('change', function() {
                form.submit();
            });
        }
    });
</script>

