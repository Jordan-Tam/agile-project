{{> header}}
<div class="container-fluid">
    <h1 class="mb-4">Search Expenses</h1>
    <p class="mb-4">View and search all expenses you owe money for</p>

    <!-- Search and Filter Form -->
    <form method="POST" action="/search" class="mb-4">
        <div class="row mb-3">
            <div class="col-md-6">
                <label for="searchTerm" class="form-label">Search by Name:</label>
                <input 
                    type="text" 
                    class="form-control" 
                    id="searchTerm" 
                    name="searchTerm" 
                    placeholder="Enter expense name..."
                    value="{{searchTerm}}"
                />
            </div>
            <div class="col-md-3">
                <label for="groupId" class="form-label">Filter by Group:</label>
                <select class="form-select" id="groupId" name="groupId">
                    <option value="">All Groups</option>
                    {{#each groups}}
                        <option value="{{this._id}}" {{#ifEquals this._id ../selectedGroupId}}selected{{/ifEquals}}>
                            {{this.groupName}}
                        </option>
                    {{/each}}
                </select>
            </div>
            <div class="col-md-3">
                <label for="filterType" class="form-label">Sort By:</label>
                <select class="form-select" id="filterType" name="filterType">
                    <option value="">No Sort</option>
                    <option value="closestDue" {{#ifEquals filterType "closestDue"}}selected{{/ifEquals}}>Closest Due</option>
                    <option value="farthestDue" {{#ifEquals filterType "farthestDue"}}selected{{/ifEquals}}>Farthest Due</option>
                    <option value="lowestAmount" {{#ifEquals filterType "lowestAmount"}}selected{{/ifEquals}}>Lowest Amount</option>
                    <option value="highestAmount" {{#ifEquals filterType "highestAmount"}}selected{{/ifEquals}}>Highest Amount</option>
                </select>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary me-2">Search</button>
                <a href="/search" class="btn btn-secondary">Clear</a>
            </div>
        </div>
    </form>

    <!-- Results Section -->
    <div class="mt-4">
        {{#if hasExpenses}}
            <h2 class="mb-3">Expenses You Owe ({{expenses.length}})</h2>
            <div class="expenses-list">
                {{#each expenses}}
                    <div class="expense-item">
                        <div class="expense-info">
                            <h3>{{this.name}}</h3>
                            <p class="mb-1"><strong>Group:</strong> {{this.group.groupName}}</p>
                            <p class="mb-1"><strong>Total Cost:</strong> ${{this.cost}}</p>
                            <p class="mb-1"><strong>Your Share:</strong> ${{this.amountPerPayer}}</p>
                            <p class="mb-1"><strong>Due Date:</strong> {{this.deadline}}</p>
                            <p class="mb-1"><strong>Payee:</strong> {{this.payeeName}}</p>
                            <p class="mb-1"><strong>Payers:</strong> {{this.payerNames}}</p>
                        </div>
                        <div class="expense-actions">
                            <a href="/groups/{{this.group._id}}" class="btn btn-info">View Group</a>
                        </div>
                    </div>
                {{/each}}
            </div>
        {{else}}
            <div class="alert alert-info">
                <h4>No expenses found</h4>
                <p>{{#if searchTerm}}No expenses match your search criteria.{{else}}You don't owe money for any expenses yet.{{/if}}</p>
            </div>
        {{/if}}
    </div>
</div>
{{> bootstrap-js}}

